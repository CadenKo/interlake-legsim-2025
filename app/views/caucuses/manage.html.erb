<% if @current_chamber_role.group_leader?( @caucus) %>
<div id="overview" class="left-column">
	<div class="left-content">
  <%= content('manage-caucus') %>
  <div class="field field-submit">
    <%= link_button_to "Return to Caucus", caucus_path( @caucus ), :size => 'sixty', :class => 'btn blue-btn' %>
  </div>
</div>
</div>

<div id="details" class="right-column">
	<div class="the-content">
    <div class="field">
      <%= link_to 'Manage Caucus Information', manage_info_caucus_path(@caucus) %>
    </div>
    <div class="field">
      <%= link_to 'Manage Legislative Study Groups', manage_referrals_caucus_path(@caucus) %>
    </div>
    <div class="field">
      <%= link_to 'Manage Discussions', manage_discussions_caucus_path(@caucus) %>
    </div>
    <% if @current_chamber.setting("has_#{@caucus.type.underscore}_voting") %>
      <div class="field">
        <%= link_to 'Manage Vote Schedule', manage_votes_caucus_path(@caucus) %>
      </div>
    <% end %>
  </div>
</div>
<% else %>
	Only the caucus leader can edit this page.
<% end %>