<div class='the-content'>
<h1>Chambers</h1>

<p>
  <% @chambers.each do |chamber| %>
    <%= chamber.course_title %> :
    <%= link_to "show", chamber_path( chamber ), :class => 'btn blue-btn' %> :
    <%= link_to "edit", edit_chamber_path( chamber ), :class => 'btn blue-btn' %> :
    <%= link_to link_to "delete", { :action => "destroy", :id => chamber },
      :confirm => "Are you sure you want to delete this chamber?",
      :method => :delete, :class => 'btn blue-btn' %>
    <br />
  <% end %>
</p>

<p><%= link_to "Create New Chamber", new_chamber_path, :class => 'btn blue-btn' %><br /></p>
</div>