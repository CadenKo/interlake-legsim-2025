<div class='the-content'>
<h1>Chamber</h1>

<%= @chamber.title %><br />

<h2>Legislative</h2>

<ul>
  <% @chamber.legislative_types.each do |legislative_type| %>
    <% legislative_type.legislation.each do |legislation| %>

      <li><%= legislation.title %> :
      <%= link_to "show", legislation_path( legislation ), :class => 'btn blue-btn' %> :
      <%= link_to "edit", edit_legislation_path( legislation ), :class => 'btn blue-btn' %> :
      <%= link_to link_to "delete", { :action => "destroy", :id => legislation },
        :confirm => "Are you sure you want to delete this legislation?", :method => :delete, :class => 'btn blue-btn' %>
      </li><br/>

    <% end %>
  <% end %>
  <li class='field field-submit'><%= link_to "Create New Legislation", new_chamber_legislation_path( @chamber ), :class => 'btn blue-btn' %></li>
</ul>

<h3>Legislative Types</h3>

<ul>
  <% @chamber.legislative_types.each do |legislative_type| %>
    <li><%= legislative_type.title%> :
    <%= link_to "edit", edit_legislative_type_path( legislative_type ), :class => 'btn blue-btn' %> :
    <%= link_to link_to "delete", { :action => "destroy", :id => legislative_type },
      :confirm => "Are you sure you want to delete this legislative type?", :method => :delete, :class => 'btn blue-btn' %>
    </li><br/>
  <% end %>
  <li class='field field-submit'><%= link_to "Create New Legislative Type", new_chamber_legislative_type_path( @chamber ), :class => 'btn blue-btn' %></li>
</ul>

<h2>Groups</h2>

<h3><%= link_to "Committees", chamber_committees_path(@chamber) %></h3>

<ul>
  <% @chamber.committees.each do |committee| %>
    <li><%= committee.title %> :
    <%= link_to "show", committee_path( committee ), :class => 'btn blue-btn' %> :
    <%= link_to "edit", edit_committee_path( committee ) , :class => 'btn blue-btn'%> :
    <%= link_to link_to "delete", { :action => "destroy", :id => committee },
      :confirm => "Are you sure you want to delete this committee?", :method => :delete , :class => 'btn blue-btn'%>
    </li><br/>
  <% end %>
  <li class='field field-submit'><%= link_to "Create New Committee", new_chamber_committee_path( @chamber ), :class => 'btn blue-btn' %></li>
</ul>


<h3><%= link_to "Caucuses", chamber_caucuses_path(@chamber) %></h3>

<ul>
  <% @chamber.caucuses.each do |caucus| %>
    <li><%= caucus.title %> :
    <%= link_to "show", caucus_path( caucus ), :class => 'btn blue-btn' %> :
    <%= link_to "edit", edit_caucus_path( caucus ), :class => 'btn blue-btn' %> :
    <%= link_to link_to "delete", { :action => "destroy", :id => caucus },
      :confirm => "Are you sure you want to delete this caucus?", :method => :delete, :class => 'btn blue-btn' %>
    </li><br/>
  <% end %>
  <li class='field field-submit'><%= link_to "Create New Caucus", new_chamber_caucus_path( @chamber ), :class => 'btn blue-btn' %></li>
</ul>


<h3><%= link_to "Parties", chamber_parties_path( @chamber) %></h3>

<ul>
  <% @chamber.parties.each do |party| %>
    <li><%= party.title %> :
    <%= link_to "show", party_path( party ), :class => 'btn blue-btn' %> :
    <%= link_to "edit", edit_party_path( party ), :class => 'btn blue-btn'%> :
    <%= link_to link_to "delete", { :action => "destroy", :id => party },
      :confirm => "Are you sure you want to delete this party?", :method => :delete , :class => 'btn blue-btn'%>
    </li><br/>
  <% end %>
  <li class='field field-submit'><%= link_to "Create New Party", new_chamber_party_path( @chamber ), :class => 'btn blue-btn' %></li>
</ul>
<br/>
<%= link_to "Back To Chamber Index", chambers_path, :class => 'btn blue-btn' %>
</div>