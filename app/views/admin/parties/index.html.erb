<div id="overview" class="left-column">
  <div class="left-content">
    <%= link_button_to 'Return to Administration', admin_path, :size => 'seventy', :class => 'btn blue-btn' %>
  </div>
</div>

<div id="details" class="right-column">
  <div class="the-content">
  <%= form_for :parties, :url => mass_delete_admin_parties_path do |f| %>

    <div id="parties" class="expander expanded">
      <div class="bar clearfix">
        <a href="#" class="title">Parties</a>
      </div><!--bar-->
      <div class="expander-contents">
        <table cellspacing="0">
          <tr>
            <th></th>
            <th style="width: 370px">Name</th>
            <th style="width: 120px; text-align: center">Abbreviation</th>
            <th style="width: 150px">Leader</th>
            <th style="width: 50px"></th>
            <th style="width: 50px"></th>
          </tr>
          <% @parties.each do |party| %>
            <tr>
              <td><%= check_box_tag "group_ids[]", party.id %></td>
              <td><%= party.name %></td>
              <td class="center"><%= party.abbr %></td>
              <td><%= link_to_user party.primary_leader %></td>
              <td><%= link_to "edit", edit_admin_party_path( party ) %></td>
              <td><%= link_to "manage", admin_party_path( party ) %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>

    <table>
      <tr>
        <td><%= f.submit "Delete Selected Parties", :size => "ninety", :confirm => "Are you sure you want to delete the selected parties", :class => 'btn blue-btn' %></td>
        <td><%= link_button_to "New Party", new_admin_party_path, :size => "ninety", :class => 'btn blue-btn' %></td>
      </tr>
    </table>
  <% end %>
</div>
</div>