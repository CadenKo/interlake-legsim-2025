<div id="overview" class="left-column">
  <div class="left-content">
  <%= content('edit-instruction') %>
  <%= link_button_to "Instruction Management", admin_instructions_path, :size => 'hundred', :class => 'btn blue-btn' %>
</div>
</div>
<div id="details" class="right-column">
  <div class="the-content">
    <%= form_for @instruction, :url => { :action => :create } do |f| %>
      <%= render(:partial => 'form', :locals => { :f => f } ) %>
      <div class='field field-submit'>
        <%= submit_tag 'Create Instruction', :class => 'btn blue-btn' %>
      </div>
    <% end %>
  </div>
</div>
