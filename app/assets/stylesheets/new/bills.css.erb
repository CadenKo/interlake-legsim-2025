/* ALERT BOX */

.alert-box {
    background: #024683;
    padding: 15px 15px 1px 15px;
    margin-bottom: 20px;
    font-size: 12px;
    line-height: 15px;
    color: #d2f0ff;
    }


.alert-box h2 {
    color: white;
    font-size: 14px;
    line-height: 18px;
    padding-left: 24px;
    text-transform: uppercase;
    }

.alert-box h2.error { background: url(<%= image_path 'icon-error.png' %>) no-repeat -1px -1px; }
.alert-box h2.attention { background: url(<%= image_path 'icon-attention.png' %>) no-repeat -1px -1px; }
.alert-box h2.information { background: url(<%= image_path 'icon-information.png' %>) no-repeat -1px -1px; }
.alert-box h2.notice { background: url(<%= image_path 'icon-notice.png' %>) no-repeat -1px -1px; }


.alert-box h2.separator {
    border-top: 1px dotted #d2f0ff;
    padding-top: 15px;
    }

.alert-box h2.error.separator,
.alert-box h2.attention.separator,
.alert-box h2.information.separator,
.alert-box h2.notice.separator { background-position: -1px 14px; }

.alert-box ul {
    padding-left: 24px;
    margin-bottom: 15px;
    }
