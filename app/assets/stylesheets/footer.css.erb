/* FOOTER STYLES */

#footer, #loginfooter {
   overflow: hidden;
   margin: auto;
   color: #9d9d9d;
   font-size: 10px;
   line-height: 17px;
   height: 86px;
   background: url(<%= image_path 'footer.png' %>) repeat-x center top;
   }

/*#footer a, #loginfooter a { text-transform: uppercase; }*/

#footer .menu_left, #loginfooter .menu_left {
   float: left;
   text-align: left;
   padding: 6px 10px;
   }

#footer .menu_right, #loginfooter .menu_right {
   float: right;
   text-align: right;
   padding: 6px 10px;
   }

#footer .copyright, #loginfooter .copyright {
   margin: auto;
   text-align: center;
   width: 320px;
   padding: 6px;
   font-size: 11px;
   }
